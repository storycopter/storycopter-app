{
  "name": "@storycopter/app",
  "version": "0.0.1",
  "main": "public/electron.js",
  "license": "BSD-3-Clause",
  "homepage": "./",
  "author": {
    "name": "Storycopter HQ",
    "email": "storycopter@gmail.com",
    "url": "https://storycopter.com"
  },
  "build": {
    "appId": "com.storycopter.storycopter",
    "productName": "Storycopter",
    "copyright": "Copyright Â©2020 ${author}",
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "afterSign": "scripts/notarize.js"
  },
  "dependencies": {
    "@material-ui/core": "4.9.12",
    "@material-ui/icons": "4.9.1",
    "@material-ui/lab": "4.0.0-alpha.51",
    "@reduxjs/toolkit": "1.3.4",
    "@storycopter/idoc": "0.0.20",
    "adm-zip": "0.4.14",
    "ansi-to-react": "6.0.0",
    "electron-is": "3.0.0",
    "electron-is-dev": "1.1.0",
    "fs-extra": "9.0.0",
    "gatsby": "2.21.5",
    "hazardous": "0.3.0",
    "material-ui-popup-state": "1.5.4",
    "npm": "6.14.4",
    "npm-commands": "1.0.2",
    "polished": "3.5.2",
    "react": "16.13.1",
    "react-beautiful-dnd": "13.0.0",
    "react-color": "2.18.0",
    "react-dom": "16.13.1",
    "react-new-window": "0.1.2",
    "react-player": "2.0.1",
    "react-redux": "7.2.0",
    "react-scripts": "3.4.0",
    "redux": "4.0.5",
    "redux-localstorage-simple": "2.1.6",
    "redux-logger": "3.0.6",
    "sanitize-filename": "1.6.3",
    "shelljs": "0.8.3",
    "strip-ansi": "6.0.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-transform-runtime": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "@babel/preset-react": "7.9.4",
    "@rescripts/cli": "0.0.13",
    "@rescripts/rescript-env": "0.0.11",
    "babel-loader": "8.1.0",
    "concurrently": "5.1.0",
    "electron": "8.0.0",
    "electron-builder": "22.3.2",
    "electron-notarize": "^0.3.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.19.0",
    "husky": "4.2.5",
    "lint-staged": "10.1.5",
    "prettier": "2.0.5",
    "prettier-eslint": "9.0.1",
    "prettier-stylelint": "0.4.2",
    "styled-components": "5.1.0",
    "stylelint-config-prettier": "8.0.1",
    "stylelint-prettier": "1.1.2",
    "typescript": "3.7.5",
    "wait-on": "4.0.0"
  },
  "scripts": {
    "start": "rescripts start",
    "clean": "npx rimraf **/node_modules/",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder -mw",
    "foo": "echo bar"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
